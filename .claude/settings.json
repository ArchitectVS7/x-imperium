{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run lint)",
      "Bash(npm run build)",
      "Bash(npm run typecheck)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git add :*)",
      "Bash(git commit :*)",
      "Bash(npx tsx :*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          { "type": "command", "command": "npm run typecheck 2>&1 | head -20" },
          { "type": "command", "command": "npm run lint -- --max-warnings 0 2>&1 | head -10" }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          { "type": "command", "command": "npm run typecheck 2>&1 | head -20" },
          { "type": "command", "command": "npm run lint -- --max-warnings 0 2>&1 | head -10" }
        ]
      }
    ]
  }
}
