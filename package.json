{
  "name": "x-imperium",
  "version": "0.1.0",
  "private": true,
  "overrides": {
    "glob": "^11.0.0",
    "esbuild": "^0.25.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test smoke-test.spec.ts",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "review:pr": "tsx scripts/review/run-review.ts",
    "milestone:status": "tsx scripts/orchestrator/parse-milestones.ts",
