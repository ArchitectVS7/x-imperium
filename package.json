    "milestone:validate": "tsx scripts/orchestrator/validate-and-commit.ts",
    "orchestrate": "tsx scripts/sdk-orchestrator/run.ts",
    "orchestrate:quick": "tsx scripts/sdk-orchestrator/run.ts --quick",
    "orchestrate:dry": "tsx scripts/sdk-orchestrator/run.ts --dry-run --quick",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:clean": "tsx scripts/clear-db.ts",
    "db:stats": "tsx scripts/db-stats.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
