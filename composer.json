{
    "name": "ximperium/elite",
    "description": "X Imperium - A classic text-based space empire management game",
    "type": "project",
    "license": "GPL-2.0-only",
    "keywords": ["game", "space", "empire", "strategy", "browser-game"],
    "homepage": "https://github.com/ArchitectVS7/x-imperium",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-session": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "classmap": [
            "include/database/",
            "include/security/",
            "include/exceptions/",
            "include/game/classes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "lint": "phpcs --standard=PSR12 include/database include/security include/exceptions",
        "analyze": "phpstan analyse include/database include/security include/exceptions --level=5",
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-text"
    },
    "minimum-stability": "stable"
}
